<% book.book_comments.each do |book_comment| %>
  <tbody>
    <td><%= attachment_image_tag book_comment.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no2_image.jpg"%></td>
    <td><%= book_comment.comment %></td>
    <td>
    <% if book_comment.user == current_user %>
      <td><%= link_to "Destroy",  book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class:"btn-sm btn-danger destroy_book"%></td>
    <% end %>
    </td>
  </tbody>
<% end %>